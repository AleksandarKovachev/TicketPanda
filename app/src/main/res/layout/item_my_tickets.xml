<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/my_tickets_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:translationZ="5dp"
    card_view:cardElevation="10dp"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/my_tickets_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/my_tickets_image_view"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:padding="10dp"
                android:scaleType="fitXY" />

            <ImageView
                android:id="@+id/my_tickets_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/ic_menu"
                android:padding="10dp" />

            <TextView
                android:textSize="20sp"
                android:id="@+id/my_tickets_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/my_tickets_menu"
                android:layout_toRightOf="@+id/my_tickets_image_view"
                android:gravity="center"
                android:padding="20dp" />

            <TextView
                android:id="@+id/my_tickets_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingRight="10dp"
                android:paddingLeft="10dp"
                android:layout_below="@+id/my_tickets_title"
                android:layout_toRightOf="@+id/my_tickets_image_view"
                android:layout_toEndOf="@+id/my_tickets_image_view" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/my_tickets_header">

            <TextView
                android:id="@+id/my_tickets_buy_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:padding="20dp" />

            <TextView
                android:id="@+id/my_tickets_projection_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:padding="20dp" />

            <TextView
                android:id="@+id/my_tickets_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toLeftOf="@+id/my_tickets_projection_date"
                android:layout_toRightOf="@+id/my_tickets_buy_date"
                android:gravity="center"
                android:padding="20dp" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>